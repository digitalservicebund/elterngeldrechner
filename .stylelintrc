{
  "plugins": ["stylelint-scss", "stylelint-selector-bem-pattern"],
  "rules": {
    "plugin/selector-bem-pattern": {
      "preset": "bem",
      "presetOptions": {
        "namespace": "#\\{\\$nsp\\}"
      }
    },
    "scss/at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": ["tailwind", "apply"]
      }
    ]
  },
  "extends": [
    "stylelint-config-recommended",
    "stylelint-config-recommended-scss"
  ]
}
