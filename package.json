{
  "name": "@egr/egr-app",
  "type": "module",
  "files": [
    "dist/*",
    "src/*"
  ],
  "scripts": {
    "start": "./setup-app-wrapper --target public --use-cache && vite",
    "build": "./setup-app-wrapper --target public --include-additional-css --include-additional-js && vite build",
    "serve-e2e": "./setup-app-wrapper --target public && vite build && http-server dist",
    "test": "LC_ALL=de-DE.utf8 vitest",
    "format": "f() { prettier --ignore-unknown --write ${@:-.}; }; f",
    "test-all": "npm run type-check && npm run lint && npm run stylelint && npm run test",
    "test-e2e": "playwright test",
    "type-check": "tsc",
    "lint": "f() { eslint --max-warnings=0 ${@:-**/*.{ts,tsx\\}}; }; f",
    "lint-fix": "f() { eslint --fix ${@:-*.{ts,tsx\\}}; }; f",
    "stylelint": "f() { stylelint ${@:-.}; }; f",
    "audit-licenses": "license-checker --onlyAllow=$(tr '\n' ';' < ./allowed-licenses) --excludePackages=@egr/egr-app@1.1.2 --out /dev/null"
  },
  "engines": {
    "node": "20.11.1",
    "npm": "10.2.4"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^19.4.1",
    "@digitalservicebund/icons": "^1.1.1",
    "@playwright/test": "^1.44.1",
    "@tailwindcss/container-queries": "^0.1.1",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "14.2.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/big.js": "^6.2.2",
    "@types/luxon": "^3.4.2",
    "@types/node": "^20.11.28",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@typescript-eslint/eslint-plugin": "^8.8.1",
    "@typescript-eslint/parser": "^8.8.1",
    "@vitejs/plugin-react": "^4.3.1",
    "@vitest/eslint-plugin": "^1.1.7",
    "autoprefixer": "^10.4.19",
    "commitlint": "^19.4.1",
    "eslint": "^9.12.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.0",
    "eslint-plugin-no-relative-import-paths": "^1.5.5",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.37.1",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-tailwindcss": "^3.17.5",
    "http-server": "^14.1.1",
    "immer": "^10.1.1",
    "jest-fail-on-console": "^3.3.0",
    "jsdom": "^24.1.0",
    "lefthook": "^1.6.7",
    "license-checker": "^25.0.1",
    "node-xlsx": "^0.23.0",
    "postcss": "^8.4.38",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.6.6",
    "sass": "^1.72.0",
    "stylelint": "^16.2.1",
    "stylelint-config-recommended": "^14.0.0",
    "stylelint-config-recommended-scss": "^14.0.0",
    "stylelint-scss": "^6.2.1",
    "stylelint-selector-bem-pattern": "^4.0.0",
    "tailwindcss": "^3.4.3",
    "typescript": "<=5.6.0",
    "typescript-eslint": "^8.8.1",
    "vite": "^5.3.1",
    "vitest": "^2.0.0"
  },
  "dependencies": {
    "@bmfin/steuerrechner": "^1.1.1",
    "@reduxjs/toolkit": "^2.2.1",
    "big.js": "^6.2.1",
    "classnames": "^2.5.1",
    "luxon": "^3.4.4",
    "react": "^18.2.0",
    "react-detect-click-outside": "^1.1.7",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.51.1",
    "react-imask": "^7.5.0",
    "react-redux": "^9.1.0",
    "react-router-dom": "^6.22.3",
    "web-vitals": "^3.5.2"
  }
}
