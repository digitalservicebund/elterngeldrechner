{
  "name": "@egr/egr-app",
  "type": "module",
  "files": [
    "dist/*",
    "src/*"
  ],
  "scripts": {
    "start": "scripts/setup-app-wrapper.sh --target public --use-cache && vite",
    "build:development": "scripts/setup-app-wrapper.sh --target public --include-additional-css --include-additional-js && vite build --mode development",
    "build:production": "scripts/setup-app-wrapper.sh --target public --include-additional-css --include-additional-js && vite build --mode production",
    "build:staging": "scripts/setup-app-wrapper.sh --target public --include-additional-css --include-additional-js && vite build --mode staging",
    "serve-e2e": "scripts/setup-app-wrapper.sh --target public && vite build --mode development && http-server dist",
    "test": "LC_ALL=de-DE.utf8 vitest",
    "format": "f() { prettier --ignore-unknown --write ${@:-.}; }; f",
    "test-all": "npm run type-check && npm run lint && npm run stylelint && npm run test",
    "test-e2e": "playwright test",
    "type-check": "tsc",
    "lint": "f() { eslint --no-warn-ignored --max-warnings=0 ${@:-**/*.{ts,tsx\\}}; }; f",
    "lint-fix": "f() { eslint --no-warn-ignored --fix ${@:-*.{ts,tsx\\}}; }; f",
    "stylelint": "f() { stylelint ${@:-.}; }; f",
    "audit-licenses": "license-checker-rseidelsohn --onlyAllow=$(tr '\n' ';' < ./allowed-licenses) --excludePackages=@egr/egr-app@1.1.2 --out /dev/null"
  },
  "engines": {
    "node": "24",
    "npm": "11"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@commitlint/config-conventional": "^19.8.1",
    "@playwright/test": "^1.53.0",
    "@tailwindcss/container-queries": "^0.1.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/downloadjs": "^1.4.6",
    "@types/luxon": "^3.6.2",
    "@types/node": "^24.0.1",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@typescript-eslint/eslint-plugin": "^8.34.0",
    "@typescript-eslint/parser": "^8.34.0",
    "@vitejs/plugin-react": "^4.5.2",
    "@vitest/eslint-plugin": "^1.2.4",
    "autoprefixer": "^10.4.21",
    "commitlint": "^19.8.1",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-import-resolver-typescript": "^4.4.3",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-no-relative-import-paths": "^1.6.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-tailwindcss": "^3.18.0",
    "fast-check": "^3.23.2",
    "http-server": "^14.1.1",
    "immer": "^10.1.3",
    "jsdom": "^26.1.0",
    "lefthook": "^1.13.1",
    "license-checker-rseidelsohn": "^4.4.2",
    "node-xlsx": "^0.24.0",
    "original-rechner": "file:original-rechner",
    "postcss": "^8.5.6",
    "prettier": "^3.5.3",
    "sass": "^1.89.2",
    "stylelint": "^16.20.0",
    "stylelint-config-recommended": "^16.0.0",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.34.0",
    "vite": "^6.3.5",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@cantoo/pdf-lib": "^2.5.2",
    "@date-fns/utc": "^2.1.1",
    "@digitalservicebund/icons": "^2.0.1",
    "@reduxjs/toolkit": "^2.9.0",
    "classnames": "^2.5.1",
    "date-fns": "^4.1.0",
    "downloadjs": "^1.4.7",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-hook-form": "^7.63.0",
    "react-imask": "^7.6.1",
    "react-redux": "^9.2.0",
    "react-router-dom": "^7.9.1"
  },
  "overrides": {
    "esbuild": "^0.25.0"
  }
}
