{
  "name": "@egr/egr-app",
  "type": "module",
  "files": [
    "dist/*",
    "src/*"
  ],
  "scripts": {
    "start": "scripts/setup-app-wrapper.sh --target public --use-cache && vite",
    "build:development": "scripts/setup-app-wrapper.sh --target public --include-additional-css --include-additional-js && vite build --mode development",
    "build:production": "scripts/setup-app-wrapper.sh --target public --include-additional-css --include-additional-js && vite build --mode production",
    "build:staging": "scripts/setup-app-wrapper.sh --target public --include-additional-css --include-additional-js && vite build --mode staging",
    "serve-e2e": "scripts/setup-app-wrapper.sh --target public && vite build --mode development && http-server dist",
    "test": "LC_ALL=de-DE.utf8 vitest",
    "format": "f() { prettier --ignore-unknown --write ${@:-.}; }; f",
    "test-all": "npm run type-check && npm run lint && npm run stylelint && npm run test",
    "test-e2e": "playwright test",
    "type-check": "tsc",
    "lint": "f() { eslint --no-warn-ignored --max-warnings=0 ${@:-**/*.{ts,tsx\\}}; }; f",
    "lint-fix": "f() { eslint --no-warn-ignored --fix ${@:-*.{ts,tsx\\}}; }; f",
    "stylelint": "f() { stylelint ${@:-.}; }; f",
    "audit-licenses": "license-checker-rseidelsohn --onlyAllow=$(tr '\n' ';' < ./allowed-licenses) --excludePackages=@egr/egr-app@1.1.2 --out /dev/null"
  },
  "engines": {
    "node": "24",
    "npm": "11"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@commitlint/types": "^20.2.0",
    "@playwright/test": "^1.57.0",
    "@tailwindcss/container-queries": "^0.1.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/downloadjs": "^1.4.6",
    "@types/luxon": "^3.7.1",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.47.0",
    "@vitejs/plugin-react": "^5.1.0",
    "@vitest/eslint-plugin": "^1.5.1",
    "autoprefixer": "^10.4.22",
    "commitlint": "^20.0.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-no-relative-import-paths": "^1.6.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-tailwindcss": "^3.18.2",
    "fast-check": "^4.3.0",
    "http-server": "^14.1.1",
    "immer": "^11.0.1",
    "jsdom": "^27.2.0",
    "lefthook": "^2.0.9",
    "license-checker-rseidelsohn": "^4.4.2",
    "node-xlsx": "^0.24.0",
    "original-rechner": "file:original-rechner",
    "postcss": "^8.5.6",
    "prettier": "^3.7.4",
    "sass": "^1.94.2",
    "stylelint": "^16.26.1",
    "stylelint-config-recommended": "^17.0.0",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.48.1",
    "vite": "^7.1.12",
    "vitest": "^4.0.15"
  },
  "dependencies": {
    "@cantoo/pdf-lib": "^2.5.3",
    "@date-fns/utc": "^2.1.1",
    "@digitalservicebund/icons": "^2.1.0",
    "@reduxjs/toolkit": "^2.11.0",
    "classnames": "^2.5.1",
    "date-fns": "^4.1.0",
    "downloadjs": "^1.4.7",
    "react": "^19.2.0",
    "react-dom": "^19.2.1",
    "react-hook-form": "^7.67.0",
    "react-imask": "^7.6.1",
    "react-redux": "^9.2.0",
    "react-router-dom": "^7.10.0"
  },
  "overrides": {
    "esbuild": "^0.25.10"
  }
}
