    "node-xlsx": "^0.23.0",
    "postcss": "^8.4.38",
    "prettier": "^3.2.5",
    "sass": "^1.72.0",
    "stylelint": "^16.2.1",
    "stylelint-config-recommended": "^14.0.0",
    "stylelint-config-recommended-scss": "^14.0.0",
    "stylelint-scss": "^6.2.1",
    "stylelint-selector-bem-pattern": "^4.0.0",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.4.2",
    "vite": "^5.3.1"
  },
