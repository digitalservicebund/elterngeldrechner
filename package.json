{
  "name": "@egr/egr-app",
  "version": "1.1.2",
  "homepage": ".",
  "type": "module",
  "files": [
    "dist/*",
    "src/*"
  ],
  "scripts": {
    "start": "./setup-app-wrapper --target public --use-cache && vite",
    "build": "./setup-app-wrapper --target public --include-additional-css --include-additional-js && vite build",
    "test": "craco test --verbose",
    "eject": "craco eject",
    "format": "f() { prettier --ignore-unknown --write ${@:-.}; }; f",
    "test-all": "npm run type-check && npm run lint && npm run stylelint && npm run test -- --watchAll=false",
    "type-check": "tsc",
    "lint": "f() { eslint --max-warnings=0 ${@:-.}; }; f",
    "lint-fix": "f() { eslint --fix ${@:-.}; }; fx",
    "stylelint": "f() { stylelint ${@:-.}; }; f",
    "audit-licenses": "license-checker --onlyAllow=$(tr '\n' ';' < ./allowed-licenses) --excludePackages=@egr/egr-app@1.1.2 --out /dev/null"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "engines": {
    "node": "20.11.1",
    "npm": "10.2.4"
  },
  "//comment-for-prettier": "See https://create-react-app.dev/docs/setting-up-your-editor/#formatting-code-automatically",
  "devDependencies": {
