{
  "name": "@egr/egr-app",
  "version": "1.1.2",
  "homepage": ".",
  "publishConfig": {
    "registry": "https://artifacts.init.de/artifactory/api/npm/egr-npm-local/"
  },
  "files": [
    "build/*",
    "src/*"
  ],
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --verbose",
    "eject": "react-scripts eject",
    "format": "prettier --write ./src/**/*.{js,jsx,ts,tsx,json,css,scss,md,html,htm} ./public/**/*.{js,jsx,ts,tsx,json,css,scss,md,html,htm}",
    "test-all": "npm run type-check && npm run lint && npm run stylelint && npm run test -- --watchAll=false",
    "type-check": "tsc",
    "lint": "eslint \"./src/**/*.{js,jsx,ts,tsx}\"",
    "lint-fix": "eslint --fix \"./src/**/*.{js,jsx,ts,tsx}\"",
    "stylelint": "stylelint \"./src/**/*.scss\""
  },
  "proxy": "https://www.bmf-steuerrechner.de",
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "engines": {
    "node": ">=16.14.2",
    "npm": ">=8.5.0"
  },
  "//comment-for-prettier": "See https://create-react-app.dev/docs/setting-up-your-editor/#formatting-code-automatically",
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.3",
    "@testing-library/react": "^12.1.4",
    "@testing-library/user-event": "^14.0.0",
    "@types/big.js": "^6.2.2",
    "@types/jest": "^27.4.1",
    "@types/luxon": "^2.3.2",
    "@types/node": "^17.0.23",
    "@types/react": "^17.0.43",
    "@types/react-dom": "^17.0.14",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "lefthook": "^1.6.1",
    "node-xlsx": "^0.23.0",
    "prettier": "^3.2.5",
    "sass": "^1.70.0",
    "stylelint": "^16.2.1",
    "stylelint-config-recommended": "^14.0.0",
    "stylelint-config-recommended-scss": "^14.0.0",
    "stylelint-scss": "^6.1.0",
    "stylelint-selector-bem-pattern": "^3.0.1"
  },
  "dependencies": {
    "@bmfin/steuerrechner": "^1.1.1",
    "@reduxjs/toolkit": "^1.8.0",
    "big.js": "^6.2.1",
    "bootstrap": "^5.3.2",
    "classnames": "^2.5.1",
    "luxon": "^2.4.0",
    "normalize.css": "^8.0.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-hook-form": "^7.29.0",
    "react-imask": "^6.4.2",
    "react-redux": "^7.2.6",
    "react-router-dom": "^6.2.2",
    "react-scripts": "^5.0.0",
    "typescript": "^4.6.3",
    "web-vitals": "^3.5.2"
  }
}
